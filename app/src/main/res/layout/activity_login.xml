<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityLogin">

    <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/textMail"
            android:background="@drawable/edit_txt_shape"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="E-mail" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintHorizontal_bias="0.511"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/edit_txt_shape"
            android:id="@+id/textRegisterPass" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textMail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Şifre"/>
    <TextView
            android:text="Yeni Kullanıcı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textRegisterLink"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/browser_actions_title_color"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textRegisterPass"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLogin"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"
            tools:visibility="invisible" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.544"/>
    <TextView
            android:text="Şifremi Unuttum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMailFragment" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textRegisterLink"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="177dp"
            android:layout_height="183dp" app:srcCompat="@drawable/ic_app"
            android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Giriş"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            app:layout_constraintTop_toBottomOf="@+id/textRegisterLink" android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_shape"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>