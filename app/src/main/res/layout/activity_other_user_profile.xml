<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activitycolor"
        tools:context=".ActivityOtherUserProfile">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:text="User Name:" android:layout_marginStart="36dp" android:textSize="12sp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="E-mail:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="12sp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"/>
    <TextView
            android:text="User ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView4"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="12sp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textOtherUserName" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="24dp"
            android:textSize="12sp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textOtherUserEmail"
            android:textSize="12sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textOtherUserName"
            app:layout_constraintStart_toStartOf="@+id/textOtherUserName"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textOtherUserID" android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textOtherUserEmail"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textOtherUserEmail"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textOtherName" android:textSize="12sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textOtherUserID"
            app:layout_constraintStart_toStartOf="@+id/textOtherUserID"/>
    <Button
            android:text="ekle"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/btnAddFriend"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"
            tools:visibility="invisible"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/fui_idp_button_background_anonymous"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"/>



</android.support.constraint.ConstraintLayout>